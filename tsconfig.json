{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "lib": [
      "dom",
      "es6",
      "es7",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "*.scss$",
          "camelCase": "dashes"
        }
      }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
